<div class="row">
    <h1><%= @recipe.name %></h1>
    <p><%= @recipe.ingredients %></p>
    <p><%= @recipe.cook_time %></p>
</div>


<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  
  <label for="name">Change Recipe Name/Title: </label><br>
  <input type="text" id="name" name="name" value="<%= @recipe.name %>">
  <br><br>
  <label for="name">Change Ingredients (type new list in this box): </label><br>
  <input type="text" id="ingredients" name="ingredients" value="<%= @recipe.ingredients %>">
  <br><br>
  <label for="name">Change Cooking Time of recipe: </label><br>
  <input type="text" id="cook_time" name="cook_time" value="<%= @recipe.cook_time %>">
  
  <input type="submit" id ="submit" value="submit">
</form>

